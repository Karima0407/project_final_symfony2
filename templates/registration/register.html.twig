{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <h1>Formulaire d'Inscription</h1>

        {{ form_errors(registrationForm) }}

        <div class="registration-form">
            {{ form_start(registrationForm) }}
            
            <div class="form-group">
                {{ form_row(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="form-group">
                {{ form_row(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="form-group">
                {{ form_row(registrationForm.numeroTelephone, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="form-group">
                {{ form_row(registrationForm.adresse, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="form-group">
                {{ form_row(registrationForm.codePostal, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="form-group">
                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="motdepasse form-group">
                {{ form_row(registrationForm.password, {'label': 'Password', 'attr': {'class': 'motdepasse'}}) }}
            </div>
            
            <div class="form-group">
                {{ form_row(registrationForm.agreeTerms, {'label': 'I agree to the terms', 'attr': {'class': 'form-check-input'}}) }}
            </div>

            

            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}

