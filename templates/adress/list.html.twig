{% extends 'base.html.twig' %}

{% block title %}Vos adresses
{% endblock %}

{% block body %}
	<div class="container">
     <div class="col-md-12 text-center">
            <a href="{{ path('account_address') }}" class="btn btn-success btn-violet">Ajouter une adresse</a>
        </div>
		<h2 class="mb-4 text-left">Vos adresses enregistrées</h2>
		<div class="row">
			{% for address in addresses %}
				<div class="col-md-6 mb-4">
					<div class=" card "id="adresse_infos">
						<div class="card-body">
							<h4>{{ address.prenom }}
								{{ address.nom }}</h4>
							<p>{{ address.adressePostale }}</p>
							<p>{{ address.codePostal }}
								{{ address.ville }}</p>
							<p>{{ address.pays }}</p>
							<p>Téléphone:
								{{ address.numeroTelephone }}</p>
						</div>
						<div class="card-footer purple-footer">
							<a href="{{ path('account_addresses', {'id' : address.id}) }}">Choisir cette adresse pour le paiement</a>
						</div>
						<a href="{{ path('delete_address', {'id': address.id}) }}">
							<i class="fa-solid fa-trash  btn-danger " id="corbeille_adresse"></i>
                             <p class="delete-message">Supprimer l'adresse</p>
							<!-- Icône de poubelle -->
						</a>
					</div>
				</div>
			{% else %}
				<div class="col-md-6">
					<p>Aucune adresse enregistrée.</p>
				</div>
			{% endfor %}
		</div>
	
	</div>
{% endblock %}

