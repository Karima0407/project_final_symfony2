{% extends 'base.html.twig' %}

{% block title %}Formulaire d'Ajout d'un Produit{% endblock %}

{% block body %}
     {% if not app.user or 'ROLE_ADMIN' not in app.user.roles %}
        <div class="alert alert-danger" role="alert">
            Vous n'avez pas les droits d'accéder à cette page.
        </div>
    {% else %}

    <div class="container ">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card ">
                    <div class="card-body">
                        <h4 class="card-title">Formulaire d'Ajout d'un Produit ✅</h4>
                        {{ form_start (produit, {attr: {'novalidate': 'novalidate'}})}}
                        <div class="form-group">
                            {{ form_row(produit.image, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(produit.description, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(produit.taille, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(produit.couleur, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(produit.descriptionDetaille, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(produit.prix, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(produit.category, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(produit.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                        {{ form_end(produit) }}

                        {% if form_errors(produit) %}
                            <div class="alert alert-danger">
                                {{ form_errors(produit) }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
{% endblock %}

