{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	{% include "navbar/navbar.html.twig" %}
	<nav>
		<ul>
			<li>
				<a href="{{path('produits_par_categorie', {categoryId: 1})}}">Vetements</a>
			</li>
			<div><img src="{{ asset('img/logo.png') }}" alt=""></div>
			<li>
				<a href="{{path('produits_par_categorie', {categoryId: 2})}}">Maquillage</a>
			</li>
			<div><img src="{{ asset('img/logo_maquillage.png') }}" alt=""></div>
			<li>
				<a href="{{path('produits_par_categorie', {categoryId: 3})}}">Bijoux</a>
			</li>
			<div><img src="{{ asset('img/bague_logo.png') }}" alt=""></div>
			<li>
				<a href="{{path('produits_par_categorie', {categoryId: 4})}}">Montres</a>
			</li>
			<div><img src="{{ asset('img/montres_logo.png') }}" alt=""></div>
		</ul>
	</nav>


	{% if app.request.attributes.get('_route') == 'app_home' %}
		<div class="liste_produits">
			{% for produit in produits %}
				<div class="makeup_liste">
					<div>
						<img src="{{ asset('img/' ~ produit.image) }}" alt="{{ produit.description }}" width="400" height="400">
					</div>
					<h2 style="width:350px;margin-left:20px;">{{ produit.description }}</h2>
				</div>
			{% endfor %}
		</div>

		<div class="d-flex justify-content-around align-items-center">


			<h1 class="ecritureCarousel">Une vaste collection de vetements pour une élégance magnifique et une beauté impréssionnante</h1>

			<div id="carouselVetements" class="carousel slide" data-ride="carousel">
				<div class="carousel-inner">
					{% set firstItem = true %}
					{% for vetement in vetements %}
						<div class="carousel-item {{firstItem ? 'active'}}">
							<img src="{{asset('/img/' ~ vetement.image)}}" class="d-block w-100" alt="">
						</div>
						{% set firstItem = false %}
					{% endfor %}

				</div>
				<a class="carousel-control-prev" href="#carouselVetements" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#carouselVetements" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
			<h1 class="ecritureCarousel">Des différentes choix et styles pour toutes les gouts et toutes les envies!</h1>


		</div>

	{% endif %}


{% endblock %}
